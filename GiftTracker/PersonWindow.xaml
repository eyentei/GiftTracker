<Window x:Class="GiftTracker.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GiftTracker"
        mc:Ignorable="d"
        Title="PersonWindow" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="personPhoto" Margin="10,10,0,10" HorizontalAlignment="Left" Width="80" Height="80"/>
        <Label x:Name="personName" Content="Label" HorizontalAlignment="Left" Margin="115,36,0,0" VerticalAlignment="Top" Width="148"/>
        <StackPanel x:Name="occasionsStackPanel" Grid.Row="1" Margin="0,0,0,0"/>

    </Grid>
</Window>
