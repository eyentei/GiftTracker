<Window x:Class="GiftTracker.AddOrEditGiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GiftTracker"
        mc:Ignorable="d"
        Title="AddNewGiftWindow" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Margin="20,20,0,20" HorizontalAlignment="Left" Width="100"/>
        <Button Content="Button" Margin="0,50,20,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right" Width="117"/>
        <TextBox Margin="64,33,64,105" TextWrapping="Wrap" Grid.Row="1"/>
        <TextBox Margin="64,0" TextWrapping="Wrap" Grid.Row="1" Height="75" VerticalAlignment="Bottom"/>
        <Button Content="Save" Margin="90,20,90,20" Grid.Row="2" Click="Button_Click"/>
        <Label Content="Name" Margin="97,0,108,134" Grid.Row="1" HorizontalContentAlignment="Center"/>
        <Label Content="Description" Margin="97,60,108,74" Grid.Row="1" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
